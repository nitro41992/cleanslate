{
  "name": "Privacy Recipe",
  "description": "Recipe with scrub:batch step containing multiple column rules",
  "version": "1.0",
  "requiredColumns": ["name", "email", "city"],
  "steps": [
    {
      "id": "step1",
      "type": "transform:uppercase",
      "label": "Uppercase Name",
      "column": "name",
      "enabled": true
    },
    {
      "id": "step2",
      "type": "scrub:batch",
      "label": "Privacy Scrub",
      "enabled": true,
      "params": {
        "rules": [
          { "column": "email", "method": "redact" },
          { "column": "city", "method": "mask" }
        ]
      }
    }
  ],
  "createdAt": "2024-01-01T00:00:00.000Z",
  "modifiedAt": "2024-01-01T00:00:00.000Z"
}
